{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Blog Platform API",
    "description": "API documentation for the Blog Platform backend."
  },
  "host": "localhost:5000",
  "basePath": "/api",
  "schemes": ["http"],
  "servers": [
    {
      "url": "http://localhost:5000/api",
      "description": "Development server"
    }
  ],
  "paths": {
    "/posts": {
      "get": {
        "summary": "Get all posts",
        "responses": {
          "200": {
            "description": "List of all posts",
            "schema": {
              "type": "object",
              "properties": {
                "posts": {
                  "type": "array",
                  "items": {
                    "$ref": "#/definitions/Post"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new post",
        "security": [
          {
            "x-auth": []
          }
        ],
        "parameters": [
          {
            "name": "Post",
            "in": "body",
            "description": "Post object that needs to be created",
            "schema": {
              "$ref": "#/definitions/NewPost"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Post created successfully",
            "schema": {
              "$ref": "#/definitions/Post"
            }
          }
        }
      }
    },
    "/posts/search": {
      "get": {
        "summary": "Search posts",
        "parameters": [
          {
            "name": "query",
            "in": "query",
            "required": true,
            "type": "string",
            "description": "The search term for querying posts."
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Post"
              }
            }
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "summary": "Get a single post by ID",
        "security": [
          {
            "x-auth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Post retrieved successfully",
            "schema": {
              "$ref": "#/definitions/Post"
            }
          },
          "404": {
            "description": "Post not found"
          }
        }
      },
      "patch": {
        "summary": "Update a post by ID",
        "security": [
          {
            "x-auth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "UpdatePost",
            "in": "body",
            "description": "Post object with updated fields",
            "schema": {
              "$ref": "#/definitions/NewPost"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Post updated successfully",
            "schema": {
              "$ref": "#/definitions/Post"
            }
          },
          "404": {
            "description": "Post not found"
          }
        }
      },
      "delete": {
        "summary": "Delete a post by ID",
        "security": [
          {
            "x-auth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Post deleted successfully"
          },
          "404": {
            "description": "Post not found"
          }
        }
      }
    },
    "/posts/{id}/comments": {
      "post": {
        "summary": "Add a comment to a post",
        "security": [
          {
            "x-auth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "Comment",
            "in": "body",
            "description": "Comment object to be added",
            "schema": {
              "$ref": "#/definitions/NewComment"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Comment added successfully"
          }
        }
      }
    },
    "/posts/{postId}/comments/{commentId}": {
      "delete": {
        "summary": "Delete a comment from a post",
        "security": [
          {
            "x-auth": []
          }
        ],
        "parameters": [
          {
            "name": "postId",
            "in": "path",
            "required": true,
            "type": "string"
          },
          {
            "name": "commentId",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Comment deleted successfully"
          },
          "404": {
            "description": "Post or comment not found"
          }
        }
      }
    },
    "/users": {
      "post": {
        "summary": "Register a new user",
        "parameters": [
          {
            "name": "User",
            "in": "body",
            "description": "User object that needs to be created",
            "schema": {
              "$ref": "#/definitions/NewUser"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "User created successfully",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "summary": "Log in a user",
        "parameters": [
          {
            "name": "Login",
            "in": "body",
            "description": "User login credentials",
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "User logged in successfully",
            "schema": {
              "$ref": "#/definitions/User"
            },
            "headers": {
              "x-auth": {
                "type": "string",
                "description": "JWT authentication token"
              }
            }
          },
          "401": {
            "description": "Invalid credentials"
          }
        }
      }
    },
    "/users/me/token": {
      "delete": {
        "summary": "Logs out a user",
       "security": [
          {
            "x-auth": []
          }
        ],
        "responses": {
          "200": {
            "description": "User logged out successfully"
          },
          "400": {
            "description": "Invalid credentials"
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "x-auth": {
      "type": "apiKey",
      "name": "x-auth",
      "in": "header"
    }
  },
  "definitions": {
    "Post": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "category": { "type": "string" },
        "author": { "type": "string" },
        "body": { "type": "string" },
        "comments": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "comment": { "type": "string" },
              "createdBy": { "type": "string" }
            }
          }
        }
      }
    },
    "NewPost": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "category": { "type": "string" },
        "body": { "type": "string" }
      },
      "required": ["title", "category", "body"]
    },
    "NewComment": {
      "type": "object",
      "properties": {
        "comment": { "type": "string" }
      },
      "required": ["comment"]
    },
    "User": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "email": { "type": "string" },
        "displayName": { "type": "string" }
      }
    },
    "NewUser": {
      "type": "object",
      "properties": {
        "email": { "type": "string" },
        "password": { "type": "string" },
        "displayName": { "type": "string" }
      },
      "required": ["email", "password", "displayName"]
    },
    "Login": {
      "type": "object",
      "properties": {
        "email": { "type": "string" },
        "password": { "type": "string" }
      },
      "required": ["email", "password"]
    }
  }
}
